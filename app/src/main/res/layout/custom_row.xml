<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:id="@+id/card_view"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="?android:attr/windowBackground"
                                   card_view:cardUseCompatPadding="true" card_view:cardBackgroundColor="#242222"
                                   android:visibility="visible" tools:visibility="visible">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <ImageView
                android:id="@+id/coverImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" android:layout_alignParentLeft="true" android:contentDescription="TODO"/>

        <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/coverImage"
                android:layout_marginLeft="16dp"
                android:paddingTop="20dp"
                android:lines="2"
                android:text="@string/title" android:layout_toEndOf="@+id/coverImage" android:layout_marginStart="16dp"
                android:textColor="#FFC107"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>